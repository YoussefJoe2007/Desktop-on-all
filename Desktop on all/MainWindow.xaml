<Window x:Class="Desktop_on_all.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop_on_all"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Welcome In Student Management System " FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,359"/>

        <TextBlock FontSize="25" Text="Username:" HorizontalAlignment="Left" Margin="161,87,0,0" VerticalAlignment="Top" Height="40" Width="123"/>
        <TextBox x:Name="EmailTextBox" Width="200" HorizontalAlignment="Left" Margin="326,78,0,298"/>

        <TextBlock FontSize="25" Text="Password:" HorizontalAlignment="Left" Margin="161,0,0,0" VerticalAlignment="Center" Width="123"/>
        <PasswordBox x:Name="PasswordBox" Width="200" HorizontalAlignment="Left" Margin="326,176,0,200"/>

        <Button Content="Login" Width="100" Height="30" HorizontalAlignment="Center" Margin="0,180,0,0"
     Click="LoginButton_Click"/>
    </Grid>
</Window>
